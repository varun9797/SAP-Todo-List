{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "./src",
  "testMatch": [
    "**/__tests__/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/__tests__/**",
    "!**/node_modules/**",
    "!**/dist/**",
    "!index.ts"
  ],
  "coverageDirectory": "../coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/__tests__/__setup__/setup.ts"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^uuid$": "<rootDir>/__tests__/__mocks__/uuid.js"
  },
  "testTimeout": 30000,
  "verbose": true,
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!uuid)"
  ]
}